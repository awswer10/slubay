<% include chunks/head %>

<form id="login" method="post" action="/login" role="form">
  <div class="form-group">
    <label for="exampleInputEmail1">Username</label>
    <input type="text" class="form-control" id="login_name" placeholder="Username">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="login_password" placeholder="Password">
  </div>
  <button id="login_submit" type="submit" class="btn btn-default">Submit</button>
</form>




<form id="register" method="post" action="/register">
    <fieldset>
        <legend>Register</legend>
        <input id="register_name" type="text" name="name" placeholder="Username" required>
        <input id="register_realname" type="text" name="realname" placeholder="Real Name" required>
        <input id="register_password" type="password" name="password" placeholder="Password" required>
        <input id="register_email" type="email" name="email" placeholder="Email" required>
        <input id="register_year" type="number" name="year" placeholder="Year" required>
        <input id="register_major" type="text" name="major" placeholder="Major" required>
        <input id="register_submit" type="submit">
    </fieldset>
</form>

<% if (error) { %>
    <p id="error"><%= error %></p>
<% } %>

