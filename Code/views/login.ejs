<% include chunks/head %>

<form id="login" method="post" action="/login">
    <fieldset>
        <legend>Login</legend>
        <input id="login_name" type="text" name="name" placeholder="Username" required>
        <input id="login_password" type="password" name="password" placeholder="Password" required>
        <input id="login_submit" type="submit">
    </fieldset>
</form>

<form id="register" method="post" action="/register">
    <fieldset>
        <legend>Register</legend>
        <input id="register_name" type="text" name="name" placeholder="Username" required>
        <input id="register_password" type="password" name="password" placeholder="Password" required>
        <input id="register_submit" type="submit">
    </fieldset>
</form>

<% if (error) { %>
    <p id="error"><%= error %></p>
<% } %>

<% include chunks/foot %>