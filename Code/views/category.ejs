<% include chunks/head %>
<% include chunks/nav %>

<div class="container">
	
	<!-- Breadcrumb -->
	<ol class="breadcrumb">
	  <li><a href="/home">Home</a></li>
	  <li class="active"><%= categoryname %></li>
	</ol>
	
	<!-- List of posts -->
	<div class="col-xs-12 col-sm-6">
		<h4>Posts</h4>
		<div class="list-group">
			<% var postCount = 0;%>
			<% posts.forEach(function(item) { %>
			<a href="/home/<%= categoryid %>/<%= item._id %>" class="list-group-item">
				<%= item.title %>
				<% postCount++;%>
			</a>
			<% }); %>
            <%if (postCount === 0) {%>
            <a class="list-group-item">
            Nothing to see here!
            </a>
            <%}%>
		</div>
	</div>
</div>

<% include chunks/foot %>