<% include chunks/head %>
<% include chunks/nav %>
<div class="container">
	<ol class="breadcrumb">
	  <li><a href="/home">Home</a></li>
	  <li><a href="/home/<%= categoryid %>"><%= post.category %></a></li>
	  <li class="active"><%= post.title %></li>
	</ol>
</div>
<div class="container page-header">
	<h3><%= post.title %></h3>
</div>
<div class="container">
<!-- Username and post information -->
<div class="container col-xs-12 col-sm-3">
	<h4>Posted by</h4>
	<p class="lead"><%= post.user %></p>
	<h4>Posted on</h4>
	<p class="lead"><%= post.date %></p>
	<button type="button" class="btn btn-warning btn-lg btn-block">Edit post</button>
	<a href="/home/<%= categoryid %>/<%= postid %>/delete"><button type="button" class="btn btn-danger btn-lg btn-block">Delete post</button></a>
</div>
<!-- Description of post -->
<div class="container col-xs-12 col-sm-9">
	<p class="text-justify">
		<%= post.description %>
	</p>
</div>

<div class="container  col-xs-12 col-sm-9">
	<div class="panel panel-primary">
	    <div class="panel-heading">
	     	<h3 class="panel-title">User comments</h3>
	    </div>
            
            <div class="list-group">
		<% comments.forEach(function(item) { %>
                    <div><%= item.textfield %></div>
		<% }); %>
	    </div>
        </div>
 </div>
</div>

<!-- Q&A Portion -->
<div class="container  col-xs-12 col-sm-9">
	<div class="panel panel-primary">
	    <div class="panel-heading">
	     	<h3 class="panel-title">Enter your comments and questions.</h3>
	    </div>
            <form method="post" action="/home/<%= categoryid %>/<%= postid %>/newcomment" role="form">
                <div class="form-group">
                    <textarea name="comment" rows="4" cols="50" placeholder="Comment" required></textarea>
                </div>            
                <button id="submitnewcomment" type="submit" class="btn btn-primary">Submit Comment</button>
            </form>
        </div>
 </div>
</div>

