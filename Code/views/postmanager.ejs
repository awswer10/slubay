<% include chunks/head %>
<% include chunks/nav %>

<div class="container">
<div class="col-xs-12 col-sm-6">
        <h4>All Posts</h4>
        <div class="list-group">
            <% posts.forEach(function(item) { %>
            <a href="/home/<%= item.categoryid %>/<%= item._id %>" class="list-group-item">
                    <h4 class="list-group-item-heading"><%= item.title %></h4>
					<p class="list-group-item-text">Posted: <%= item.date %></p>
					<p class="list-group-item-text">Views: <%= item.views %></p>
            </a>
            <% }); %>
        </div>
</div>
</div>
<% include chunks/foot %>